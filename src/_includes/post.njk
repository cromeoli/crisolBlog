{# Plantilla principal de los posts #}

<body id="swup">
    <header class="postHeader">
        <h1 class="transition-fade">{{ title }}</h1>
        <div class="line transition-extend"></div>
    </header>
    
    <main class="main transition-fade">
        <section>
            <date>{{ postDate }}</date>
            {{ content | safe }}
        </section>
    </main>
    <footer class="postFooter">
        <div class="line transition-extendLate"></div>
        <a href="/index.html">
            <svg class="triangle" viewBox="0 0 10 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 0L9.33013 7.5H0.669873L5 0Z" fill="currentColor"/>
            </svg>
            Volver
        </a>
    </footer>
</body>
